<androidx.cardview.widget.CardView android:id="@+id/s1"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    card_view:cardElevation="20dp"
    android:layout_margin="10dp"
    card_view:contentPadding="20dp"
    android:background="@drawable/ic_viewbg"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".viewHotel">

    <ImageView
        android:id="@+id/image"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:srcCompat="@drawable/b12"
        />

        <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="50dp"
        android:text="Hotel Name:"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="50dp"
        android:text="Start Time:"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="50dp"
        android:text="End Time:"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="50dp"
        android:text="Address:"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="50dp"
        android:text="Price:"
        android:textColor="#000"/>



        <TextView
            android:id="@+id/txtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="210dp"
            android:layout_marginTop="190dp"
            android:text="TextView"
            android:textColor="#000"/>


        <TextView
            android:id="@+id/txtstime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="210dp"
            android:layout_marginTop="230dp"
            android:text="TextView"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/txtetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="210dp"
            android:layout_marginTop="270dp"
            android:text="TextView"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/txtaddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="208dp"
            android:layout_marginTop="310dp"
            android:text="TextView"
            android:textColor="#000"/>


        <TextView
            android:id="@+id/txtprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="211dp"
            android:layout_marginTop="350dp"
            android:text="TextView"
            android:textColor="#000"/>


        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="400dp" />

        <EditText
            android:id="@+id/edt"
            android:hint="Select Date"
            android:focusable="false"
            android:inputType="none"
            android:layout_marginTop="430dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etChooseTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="470dp"
            android:focusable="false"

            android:hint="Choose the time" />



        <Button
            android:id="@+id/btnaddroom"
            android:layout_width="144dp"
            android:layout_height="36dp"

            android:layout_marginTop="529dp"
            android:background="@color/blue"
            android:text="ADD Room"

            android:textColor="@color/white" />

    <Button
        android:id="@+id/btnnext"
        android:layout_width="144dp"
        android:layout_height="36dp"
        android:layout_marginLeft="170dp"

        android:layout_marginTop="529dp"
        android:background="@color/colorPurple"
        android:text="View Room"

        android:textColor="@color/white" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>